@model Product

<div class="col-md-4 ">
    
        <div class="card mb-3 p-3 ">
            <a href="/@Model.url">
                <img src="~/img/products/@Model.imageUrl" alt="@Model.name" style="height: 15rem;"/>
                <div class="card-body">
                    <h4 class="card-title text-capitalize font-weight-bold">
                        @Model.name
                    </h4>
                    <h3 class="font-weight-bold">
                        <i class="fas fa-lira-sign "></i> @Model.price 
                    </h3>
                </div>
            </a>
            <div class="card-footer text-center">
                <a href="/@Model.url" class="btn btn-outline-primary btn-lg">Ä°ncele</a>
            </div>
        </div>

</div>