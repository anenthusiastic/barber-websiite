
<div class="bradcam_area breadcam_bg overlay2">
    <h3>Åžifre Yenileme</h3>
</div>

@if(TempData["message"]!=null){
    var alert = JsonConvert.DeserializeObject<AlertType>(TempData["message"] as String);
    <div class = "container alert alert-@alert.Alert mt-5">
        <p>@alert.Message</p> 
    </div>
}

<div class="row mt-5">
    <div class="col-md-8">

        <form asp-controller="Account" asp-action="ForgotPassword" method="post">           
          
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Email</label>
                <div class="col-md-10">
                    <input type="text" name="Email" class="form-control" />
                </div>
            </div>
         
            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>

        </form>

    </div>
</div>